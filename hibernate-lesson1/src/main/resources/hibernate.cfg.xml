<?xml version="1.0" encoding="UTF-8" ?>
<!--<!DOCTYPE hibernate3-configuration SYSTEM "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">-->

<hibernate-configuration>
  <session-factory>

    <property name="connection.driver_class">org.h2.Driver</property>
    <property name="connection.url">jdbc:h2:~/hibernate-lesson-1</property>
    <property name="connection.username">sa</property>
    <property name="connection.password"/>
    <property name="default_schema">PUBLIC</property>

    <property name="dialect">org.hibernate.dialect.H2Dialect</property>

    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="hbm2ddl.auto">create-drop</property>

  </session-factory>
</hibernate-configuration>